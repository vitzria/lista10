#include <stdio.h>
#include <stdlib.h>

int main()
{
    int *p, num, i=0, i2=0;

        p=(int*)calloc(10,sizeof(int));

        do{
            printf("\nDigite um valor ou digite 0 para sair: ");
            scanf("%d" , &num);
            p[i++]=num;
                if(i2++ == 9){
                    p=(int*)realloc(p,10*sizeof(int));
            }
        }while(num!=0);

        for(i=0;i<i2;i++){
            printf("\n%d" , p[i]);
        }
free(p);
return 0;
}
